<div class="section">
	<div class="container">
	<div class="columns is-centered">

		<div class="column is-4">
			
		<h2 class="title is-2">create group</h2>

<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

	  <div class="field">
	  	<div class="control">
	    <%= f.input :name, required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
		</div>

    <div>
    <%= f.label :icon, class: 'label' %>
    <%= f.file_field :icon,
                required: true,
                input_html: { autocomplete: "icon" }, direct_upload: true %>
    </div><br>

		<div class="field">
			<div class="control">
		 		<%= f.button :submit, "create group", class:"button is-primary is-fullwidth" %>
		 	</div>
		</div>

		<% end %>
			<br />
		</div>
		</div>
	</div>
</div>