<%= simple_form_for [@deal, @comment] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class='field'>
  <div class="control">
    <%= f.input :name, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
    <%= f.input :body, label: 'comment about it', input_html: { class: 'textarea' }, wrapper: false, label_html: {class: 'label'}, placeholder: 'say your opinion', autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: 'button is-info is-fullwidth' %>
<% end %>
