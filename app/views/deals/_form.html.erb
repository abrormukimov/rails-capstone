<div class="section">
	<div class="container">
	<div class="columns is-centered">

		<div class="column is-4">
			
		<h2 class="title is-2">create deal</h2>

<%= simple_form_for(@deal) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
	  	<div class="control">
	    <%= f.input :name, required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
	</div>

  <div class="field">
	  	<div class="control">
	    <%= f.input :amount, required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
		</div>
  <div class='has-text-centered has-text-black has-text-bold'><p>Pick one or more Group(optional) if available</p></div>
<div>
      <div class='grup-lists'>
        <p><%= f.collection_check_boxes(:group_ids, Group.all, :id, :name)%></p>
	</div>
</div>


<br><br>

  <div class="field">
			<div class="control">
		 		<%= f.button :submit, "create deal", class:"button is-primary is-fullwidth" %>
		 	</div>
		</div>
<% end %>
     </div>
   </div>
  </div>
</div>
